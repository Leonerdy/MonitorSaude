<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MonitorSaude.Views.AboutPage"
             Title="Sobre o Aplicativo">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Image Source="app_logo.png"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center"/>

            <Label Text="MonitorSaude"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="10,0"/>

            <Label Text="Teste Técnico - Auvo Tecnologia"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="Gray"/>

            <BoxView HeightRequest="2"
                     BackgroundColor="LightGray"
                     Margin="0,10"/>

            <Label Text="O MonitorSaude é um aplicativo desenvolvido para monitoramento de atividades físicas, saúde e alimentação. Ele permite registrar exercícios, sincronizar com APIs de saúde e exibir dados em tempo real para que o usuário acompanhe suas métricas ao longo do tempo."
                   FontSize="16"
                   LineBreakMode="WordWrap"/>

            <Label Text="Requisitos Técnicos"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="10,10,0,5"/>

            <VerticalStackLayout Spacing="5">
                <Label Text="✔ Integração com Google Fit (Android) e HealthKit (iOS)." FontSize="14"/>
                <Label Text="✔ Implementação de gráficos complexos para visualização de métricas." FontSize="14"/>
                <Label Text="✔ Sincronização de dados entre dispositivos e armazenamento local." FontSize="14"/>
                <Label Text="✔ Integração com sensores como pedômetro e monitor cardíaco." FontSize="14"/>
                <Label Text="✔ Arquitetura MVVM com Dependency Injection." FontSize="14"/>
                <Label Text="✔ Diferenciação de UI entre Android (Material Design) e iOS (Human Interface Guidelines)." FontSize="14"/>
                <Label Text="✔ Otimização de performance com threading e tarefas assíncronas." FontSize="14"/>
            </VerticalStackLayout>

            <BoxView HeightRequest="2"
                     BackgroundColor="LightGray"
                     Margin="0,10"/>

            <Button Text="Saiba mais"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    Clicked="OnLearnMoreClicked"
                    HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
